@model IEnumerable<AVTMS.Models.Users>

@{
    ViewData["Title"] = "Registered Users";
}

<div class="container mt-3">
    <div class="card shadow-md rounded-4 p-2">
        <div class="card-body">
            <h1 class="mb-2 text-primary"><i class="fa fa-users mr-2"></i> Registered Users</h1>

            <div class="mb-3">
                <a class="btn btn-outline-primary align-items-center" asp-area="" asp-controller="Account" asp-action="VerifyEmail">
                    <i class="fa fa-key mr-2"></i> Change Password
                </a>
            </div>
        </div>
    </div>
</div>


<div class="card">
    <div class="card-header">
        Registerd System Users
    </div>
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>User Type</th>
                    <th>User Name</th>
                    <th>Password</th>
                    <th>Actions</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr class="text-center">
                        <td>@user.FullName</td>
                        <td>@user.Email</td>
                        <td> <span class="badge badge-info "> @user.UserType</span></td>
                        <td>@user.UserName</td>
                        <td>@user.PasswordHash?.Substring(0, 10)...</td>

                        <td>
                            <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
