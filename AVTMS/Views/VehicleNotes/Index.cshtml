@model IEnumerable<AVTMS.Models.VehicleNotes>

@{
    ViewData["Title"] = "Index";
}
<div class="card shadow-sm mt-3 mb-4">
    <div class="card-body d-flex justify-content-between align-items-center">
        <h1 class="card-title mb-0 text-secondary fw-bold">
            <i class="fa fa-sticky-note mr-2" aria-hidden="true"></i>Vehicle Notes
        </h1>
        <a asp-action="Create" class="btn btn-primary btn-md d-flex align-items-center shadow-sm">
            <i class="fa fa-plus mr-2"></i> Add New Note
        </a>
    </div>
</div>


<p>
    <a asp-action="Create" class=" btn btn-outline-primary"><i class="fa fa-plus"></i>Added New Vehicle Note</a>
</p>
<div class="card">
    <div class="card-header">
        Vehile Notes
    </div>
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.NoteContent)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Vehicle)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Vehicle.ImagePath)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreatedByID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreatedOn)
                    </th>
                    
                   
                    <th>
                        Edit
                    </th>
<th>
                        View
                    </th>
                    <th>
                        Delete
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NoteContent)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Vehicle.VehicleNumberPlate)
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.Vehicle.ImagePath))
                            {
                                <img src="@Url.Content(item.Vehicle.ImagePath)" alt="Vehicle Image" style="max-width:100px; max-height:90px;" />
                            }
                            else
                            {
                                <span>No Image</span>
                            }
                        </td>
                        
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedByID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedOn)
                        </td>


                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"><i class="fa fa-edit"></i>Edit</a>

                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning"><i class="fa fa-eye"></i>View</a>
                        </td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa fa-trash"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
