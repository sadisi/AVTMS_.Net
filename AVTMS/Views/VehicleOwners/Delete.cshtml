@model AVTMS.Models.VehicleOwner

@{
    ViewData["Title"] = "Delete Vehicle Owner";
}

<h1 class="text-danger">Delete Vehicle Owner</h1>

<h5 class="mb-4">Are you sure you want to delete this record?</h5>

<div class="card shadow-sm border-danger mb-4">
    <div class="card-header bg-danger text-white">
        <strong>Owner Details</strong>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-striped">
            <tbody>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.OwnerName)</th>
                    <td>@Html.DisplayFor(model => model.OwnerName)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.OwnerMobileNumber)</th>
                    <td>@Html.DisplayFor(model => model.OwnerMobileNumber)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.OwnerEmail)</th>
                    <td>@Html.DisplayFor(model => model.OwnerEmail)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.OwnerAddress)</th>
                    <td>@Html.DisplayFor(model => model.OwnerAddress)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.CreatedByID)</th>
                    <td>@Html.DisplayFor(model => model.CreatedByID)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.CreatedOn)</th>
                    <td>@Html.DisplayFor(model => model.CreatedOn)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ModifiedBy)</th>
                    <td>
                        @if (string.IsNullOrEmpty(Model.ModifiedBy))
                        {
                            <span class="badge bg-secondary">Not Modified</span>
                        }
                        else
                        {
                            @Html.DisplayFor(model => model.ModifiedBy)
                        }
                    </td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ModifiedOn)</th>
                    <td>
                        @if (Model.ModifiedOn == null)
                        {
                            <span class="badge bg-secondary">Not Modified</span>
                        }
                        else
                        {
                            @Html.DisplayFor(model => model.ModifiedOn)
                        }
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<form asp-action="Delete" class="d-flex gap-2">
    <input type="hidden" asp-for="NIC" /> 
    <button type="submit" class="btn btn-danger ">
        <i class="fas fa-trash mr-2"></i> Delete
    </button>
    <a asp-action="Index" class="btn btn-secondary ml-4">Back to List</a>
</form>
