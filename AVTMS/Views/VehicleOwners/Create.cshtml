@model AVTMS.Models.VehicleOwner

@{
    ViewData["Title"] = "Create";
}
<div class="container mt-3">
    <div class="card shadow-md rounded-4 mb-3">
        <div class="card-body p-5">
            <h1 class="text-primary text-center m"> Vehilce Owner Registration Page</h1>
            <h4 class="text-muted text-center mt-2"><small>Double check your details</small></h4>
            
        </div>
    </div>
</div>

<hr />
<div class="row mt-4">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="NIC" class="control-label"></label>
                        <input asp-for="NIC" class="form-control" />
                        <span asp-validation-for="NIC" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="OwnerName" class="control-label"></label>
                        <input asp-for="OwnerName" class="form-control" />
                        <span asp-validation-for="OwnerName" class="text-danger"></span>
                    </div>
                </div>
                  

                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="OwnerMobileNumber" class="control-label"></label>
                        <input asp-for="OwnerMobileNumber" class="form-control" />
                        <span asp-validation-for="OwnerMobileNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="OwnerEmail" class="control-label"></label>
                        <input asp-for="OwnerEmail" class="form-control" />
                        <span asp-validation-for="OwnerEmail" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group mb-3">
                        <label asp-for="OwnerAddress" class="control-label"></label>
                        <input asp-for="OwnerAddress" class="form-control" />
                        <span asp-validation-for="OwnerAddress" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <hr />
            <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary btn-block" />
            </div>
            <div>
                <a asp-action="Index" class="btn btn-outline-secondary btn-block">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
