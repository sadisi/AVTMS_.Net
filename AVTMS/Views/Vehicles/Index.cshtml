@model IEnumerable<AVTMS.Models.Vehicle>

@{
    ViewData["Title"] = "Vehicle List Page";
}

<h1>Vehicle List Page</h1>

<p>
    <a asp-action="Create" class=" btn btn-outline-primary"><i class="fa fa-plus"></i>Register New Vehicle</a>
</p>
<div class="card">
    <div class="card-header">
       
    </div>
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                       Image
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.VehicleNumberPlate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.VehicleModel)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.VehicleColor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.VehicleNote)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.VehicleOwner)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreatedByID)
                    </th>

                    <th>Edit</th>
                    <th>View</th>
                    <th>Delete</th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @if (!string.IsNullOrEmpty(item.ImagePath))
                            {
                                //<img src="@Url.Content(item.ImagePath)" alt="Vehicle Image" width="100" height="60" />
                                <img src="@item.ImagePath" alt="Vehicle Image" width="100" height="60" />
                            }
                            else
                            {
                                <span class="badge bg-danger">No Image</span>
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VehicleNumberPlate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VehicleModel)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VehicleColor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VehicleNote)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VehicleOwner.NIC)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedByID)
                        </td>

                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"><i class="fa fa-edit"></i>Edit</a>

                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning"><i class="fa fa-eye"></i>View</a>
                        </td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa fa-trash"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
