@model AVTMS.Models.Vehicle

@{
    ViewData["Title"] = "Details";
}

<h1>Vehicle Details</h1>

<!-- Custom Table UI -->
<table class="table table-bordered table-striped table-hover">
    <tbody>
        <tr>
            <td>@Html.DisplayNameFor(model => model.ImagePath)</td>
            <td>
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <img src="@Model.ImagePath" alt="Vehicle Image" style="max-width:300px; height:auto;" />
                }
                else
                {
                    <span class="badge bg-danger">No image uploaded</span>
                }
            </td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.VehicleNumberPlate)</td>
            <td>@Html.DisplayFor(model => model.VehicleNumberPlate)</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.VehicleModel)</td>
            <td>@Html.DisplayFor(model => model.VehicleModel)</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.VehicleColor)</td>
            <td>@Html.DisplayFor(model => model.VehicleColor)</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.VehicleNote)</td>
            <td>@Html.DisplayFor(model => model.VehicleNote)</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.VehicleOwner)</td>
            <td>@Html.DisplayFor(model => model.VehicleOwner.NIC)</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.CreatedByID)</td>
            <td>@Html.DisplayFor(model => model.CreatedByID)</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.CreatedOn)</td>
            <td>@Html.DisplayFor(model => model.CreatedOn)</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.ModifiedBy)</td>
            <td>@Html.DisplayFor(model => model.ModifiedBy)</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.ModifiedOn)</td>
            <td>@Html.DisplayFor(model => model.ModifiedOn)</td>
        </tr>
    </tbody>
</table>

<!-- Edit/Delete Buttons -->
<div class="mt-3">
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    <form asp-action="Delete" method="post" style="display:inline;">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>
