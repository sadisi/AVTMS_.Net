@model AVTMS.Models.BaseUser

@{
    ViewData["Title"] = "Delete";
}

<div class="alert alert-warning d-flex align-items-center mt-3" role="alert">

    <div>
        <h5 class="mb-1">
            <i class="fas fa-exclamation-triangle mr-2"></i>
            Are you sure you want to delete this User?
        </h5>
        <small class="text-muted">This action cannot be undone.</small>
    </div>
</div>
<div>
    <div class="card shadow-sm mb-4 mt-3">
        <div class="card-body">
            <h4 class="card-title mb-0">
                <i class="fas fa-info-circle mr-2 text-primary"></i>Base User Details
            </h4>
        </div>
    </div>
    <hr />
    <table class="table table-bordered table-striped ">
        <thead>
            <tr>
                <th style="width: 5%;">#</th>
                <th style="width: 25%;">Field</th>
                <th style="width: 70%;">Value</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>1.</td>
                <td>@Html.DisplayNameFor(model => model.EmployeeId)</td>
                <td>@Html.DisplayFor(model => model.EmployeeId)</td>
            </tr>
            <tr>
                <td>2.</td>
                <td>@Html.DisplayNameFor(model => model.NIC)</td>
                <td>@Html.DisplayFor(model => model.NIC)</td>
            </tr>
            <tr>
                <td>3.</td>
                <td>@Html.DisplayNameFor(model => model.FirstName)</td>
                <td>@Html.DisplayFor(model => model.FirstName)</td>
            </tr>
            <tr>
                <td>4.</td>
                <td>@Html.DisplayNameFor(model => model.MiddleName)</td>
                <td>@Html.DisplayFor(model => model.MiddleName)</td>
            </tr>
            <tr>
                <td>5.</td>
                <td>@Html.DisplayNameFor(model => model.LastName)</td>
                <td>@Html.DisplayFor(model => model.LastName)</td>
            </tr>
            <tr>
                <td>6.</td>
                <td>@Html.DisplayNameFor(model => model.Email)</td>
                <td>@Html.DisplayFor(model => model.Email)</td>
            </tr>
            <tr>
                <td>7.</td>
                <td>@Html.DisplayNameFor(model => model.Password)</td>
                <td>@Html.DisplayFor(model => model.Password)</td>
            </tr>
            <tr>
                <td>8.</td>
                <td>@Html.DisplayNameFor(model => model.PhoneNumber)</td>
                <td>@Html.DisplayFor(model => model.PhoneNumber)</td>
            </tr>
            <tr>
                <td>9.</td>
                <td>@Html.DisplayNameFor(model => model.RegisteredDate)</td>
                <td>@Html.DisplayFor(model => model.RegisteredDate)</td>
            </tr>
            <tr>
                <td>10.</td>
                <td>@Html.DisplayNameFor(model => model.UserType)</td>
                <td>@Html.DisplayFor(model => model.UserType)</td>
            </tr>
            <tr>
                <td>11.</td>
                <td>@Html.DisplayNameFor(model => model.UserBranch)</td>
                <td>@Html.DisplayFor(model => model.UserBranch)</td>
            </tr>
        </tbody>
    </table>
    <hr />
    <form asp-action="Delete" class="mt-4 mb-4">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger btn-block" />
        <a asp-action="Index" class="btn btn-outline-secondary btn-block ">Back to List</a>
    </form>
</div>
